generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum ProcessStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

enum ExecutionStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

enum StepStatus {
  PENDING
  DONE
  FAILED
}

model Organization {
  id        String   @id @default(uuid())
  name      String
  createdAt DateTime @default(now())

  processes Process[]
}

model Process {
  id             String        @id @default(uuid())
  organizationId String
  name           String
  version        Int
  status         ProcessStatus
  createdAt      DateTime      @default(now())

  organization Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  steps      ProcessStep[]
  executions Execution[]

  @@unique([organizationId, name, version])
  @@index([organizationId])
}

model ProcessStep {
  id        String  @id @default(uuid())
  processId String
  name      String
  order     Int
  config    Json?

  process Process @relation(fields: [processId], references: [id], onDelete: Cascade)

  @@unique([processId, order])
  @@index([processId])
}

model Execution {
  id          String          @id @default(uuid())
  processId   String
  status      ExecutionStatus
  startedAt   DateTime        @default(now())
  finishedAt  DateTime?
  createdAt   DateTime        @default(now())

  process Process @relation(fields: [processId], references: [id], onDelete: Restrict)

  steps ExecutionStep[]

  @@index([processId])
  @@index([status])
}

model ExecutionStep {
  id           String     @id @default(uuid())
  executionId  String
  stepId       String
  nameSnapshot String
  orderSnapshot Int
  configSnapshot Json?
  status       StepStatus @default(PENDING)
  completedAt  DateTime?

  execution Execution @relation(fields: [executionId], references: [id], onDelete: Cascade)

  @@unique([executionId, stepId])
  @@index([executionId])
}

model Outbox {
  id          String   @id @default(uuid())
  aggregateId String
  type        String
  payload     Json
  occurredOn  DateTime
  published   Boolean  @default(false)

  @@index([published])
  @@index([occurredOn])
}