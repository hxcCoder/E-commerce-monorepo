{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "types": ["node", "jest"],
    "moduleResolution": "bundler",

    "rootDir": "src",
    "outDir": "dist",
    
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts"],

  "exclude": [
    "node_modules",
    "dist",
    "tests",
    "prisma",
    "config",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
