NODE_ENV=development
PORT=3000

# Supabase Postgres connection string (Transaction pooler or direct)
DATABASE_URL=postgresql://postgres:<PASSWORD>@db.<PROJECT-REF>.supabase.co:5432/postgres?sslmode=require

# JWT secret for backend-authenticated routes (>=32 chars)
JWT_SECRET=change-this-to-a-long-random-secret-at-least-32-characters
JWT_ISSUER=meracod-backend
JWT_AUDIENCE=meracod-api

# Set false only for local dev smoke tests
ENABLE_AUTH=true

# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:5173,http://localhost:3000
